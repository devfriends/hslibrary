.container
  %p#notice= notice
  %h1 Categories
  %table.table
    %thead
      %tr
        %th Name
        %th Description
        %th{:colspan => "3"}
    %tbody
      - @categories.each do |category|
        %tr
          %td= link_to category.name, category
          %td= category.description
          %td.col-xs-2
            = link_to 'Edit', edit_item_path(category), class: "btn btn-primary btn-xs"
            = link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-xs"
  %br/
  = link_to 'New Category', new_category_path, class: "btn btn-primary"
