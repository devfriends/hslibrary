= form_for(@category, html: {class: 'form-horizontal'}) do |f|
  - if @category.errors.any?
    #error_explanation
      %h2
        = pluralize(@category.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @category.errors.full_messages.each do |message|
          %li= message
  .form-group
    .col-xs-2
      = f.label :name
      = f.text_field :name
  .form-group
    .col-xs-2
      = f.label :description
      = f.text_field :description
  .form-group
    .col-sm-10
      = f.submit "Create Category", class: "btn btn-primary"
