.container.pad-top-10
  .row
    .col-lg-8.col-sm-8.col-lg-offset-2.col-sm-offset-2.jumbotron.text-center 
      %h1 
        Homeschool 
        .small Resource Library
      - if current_user
        = link_to "Browse Items", items_path, class: "btn btn-primary btn-lg"
      - else 
        = link_to "Log in", new_session_path(resource_name), class: "btn btn-primary"
        = link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary"
        %h5
          .small= link_to "Forgot your password?", new_password_path(resource_name)
