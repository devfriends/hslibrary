<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Item type</th>
      <th>Isbn</th>
      <th>Grade level</th>
      <th>Status</th>
      <th>Category</th>
      <th>Author</th>
      <th>Publisher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_type %></td>
        <td><%= item.isbn %></td>
        <td><%= item.grade_level %></td>
        <td><%= item.status %></td>
        <td><%= item.category_id %></td>
        <td><%= item.author %></td>
        <td><%= item.publisher_id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

