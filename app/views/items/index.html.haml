.container
  %p#notice= notice
  %h1 Items
  .table-responsive
    %table.table
      %thead
        %tr
          %th Item type
          %th Isbn
          %th Grade level
          %th Status
          %th Category
          %th Author
          %th Publisher
          %th{:colspan => "3"}
      %tbody
        - @items.each do |item|
          %tr
            %td= link_to item.item_type, item
            %td= item.isbn
            %td= item.grade_level
            %td= item.status
            %td= item.category.name if item.category
            %td= item.author
            %td= item.publisher.name if item.publisher
            %td.col-xs-2
              = link_to 'Edit', edit_item_path(item), class: "btn btn-primary btn-xs"
              = link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-xs"
  %br/
  = link_to 'New Item', new_item_path, class: "btn btn-primary"
